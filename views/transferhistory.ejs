<%- include('partials/header') -%>

    <style>
        body {
            background-color: rgb(222, 222, 235);
        }
    </style>

    <div class="container my-5">

        <h1 class="text-center mb-4" style="color: #626262; font-weight: bold;">Transfer History</h1>
    </div>


    <div class="container my-5">
        <table class="table table-striped table-secondary m-auto" width="80%">
            <thead>
                <tr class="table-dark">
                    <th scope="col">SENDER'S NAME</th>
                    <th scope="col">RECEIVER'S NAME</th>
                    <th scope="col">AMOUNT TRANSFERRED</th>
                </tr>
            </thead>
            
            <tbody class='fw-bold'>
                <% transferList.forEach(function(transfer){%>
                    <tr class="d1">
                        <td>
                            <%= transfer.sender %>
                        </td>
                        <td>
                            <%= transfer.receiver %>
                        </td>
                        <td>
                            <%= transfer.amount %>
                        </td>
                    </tr>
                    <% }) %>

            </tbody>
        </table>

    </div>


    <footer class="text-center px-0 py-4 sticky-bottom">
        <p>&copy 2021. Made by <b>YASHIT KUMAR</b> <br> SPARKS Foundation</p>
    </footer>


    <%- include('partials/footer') -%>