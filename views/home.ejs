<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');

  new Chart(ctx, {

    type: 'doughnut',
    data: {
  labels: [
    'راس المال المتاح ',
    'رأس المال المستخدم',
  ],
  datasets: [{
    data: [<%= totalAmount %>, 50],
    backgroundColor: [
      '#4caf50',
      '#f44336',
      'rgb(255, 205, 86)'
    ],
    hoverOffset: 4
  }],
      options: {
        plugins: {
            subtitle: {
                display: true,
                text: 'Custom Chart Subtitle'
            }
        }
    }
},
    
  });
</script>


